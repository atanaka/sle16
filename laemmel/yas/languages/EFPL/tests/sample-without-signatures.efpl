-- The decrement function
dec x = (-) x 1

-- The factorial function
factorial x =
  if (==) x 0
    then 1
    else (*) x (factorial (dec x))

-- The function combinator to apply a function twice
twice :: (a -> a) -> a -> a
twice f x = f (f x)

-- Apply the factorial function twice to 3
main = print $ twice factorial 3 -- Prints 720
